<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.unicorn.userui">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name="com.unicorn.userui.activity.ClientBookActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.unicorn.userui.activity.MenuActivity"
            android:parentActivityName="com.unicorn.userui.activity.ClientBookActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.unicorn.userui.activity.ClientBookActivity" />
        </activity>

        <activity
            android:name="com.unicorn.userui.activity.OrderBookActivity"
            android:parentActivityName="com.unicorn.userui.activity.ClientBookActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.unicorn.userui.activity.ClientBookActivity" />
        </activity>

        <activity
            android:name="com.unicorn.userui.activity.OrderCardActivity"
            android:parentActivityName="com.unicorn.userui.activity.ClientBookActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.unicorn.userui.activity.ClientBookActivity" />
        </activity>

        <activity
            android:name="com.unicorn.userui.activity.ItemCardActivity"
            android:parentActivityName="com.unicorn.userui.activity.MenuActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.unicorn.userui.activity.MenuActivity" />
        </activity>

        <activity
            android:name="com.unicorn.userui.activity.CheckoutActivity"
            android:parentActivityName="com.unicorn.userui.activity.MenuActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.unicorn.userui.activity.MenuActivity" />
        </activity>
    </application>

</manifest>